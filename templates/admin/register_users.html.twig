{% extends 'base.html.twig' %}

{% block title %}Inscrire des utilisateurs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Inscrire des utilisateurs</h1>

        <p class="lead text-center mb-5">Importez un fichier CSV pour inscrire plusieurs utilisateurs en une seule fois.</p>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Formulaire d'importation</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.file, 'Fichier CSV Ã  importer', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                            <small class="form-text text-muted">Assurez-vous que le fichier soit au format CSV.</small>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg mt-3">Importer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('admin_list_users') }}" class="btn btn-secondary btn-sm"> liste des Utilisateurs</a>
        </div>
    </div>
{% endblock %}
